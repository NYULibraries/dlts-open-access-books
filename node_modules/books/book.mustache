<!doctype html>
<html>
<head>
  <title>{{appName}}: {{title}}</title>
  {{> head }}
  <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>  
  <script type="text/javascript">stLight.options({publisher: "9f7e1ebf-93de-45e6-b1d3-6f81661f02ba", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>  
</head>
<body class="page book" data-app="{{appUrl}}" data-readium="{{readiumUrl}}">
  {{> header }}
  <iframe src="{{readiumUrl}}/simpleviewer.html?epub=epub_content/{{id}}&embedded=true" allowfullscreen mozallowfullscreen webkitallowfullscreen seamless="seamless" frameBorder="0"></iframe>
  <div class="social">
    <span class="st_facebook_large" st_url="{{appUrl}}/book/{{identifier}}" st_image="{{readiumUrl}}/{{thumbHref}}" st_summary="{{description}}" st_title="{{title}}" displayText="Facebook"></span>
    <span class="st_twitter_large" st_url="{{appUrl}}/book/{{identifier}}" st_image="{{readiumUrl}}/{{thumbHref}}" st_summary="{{description}}" st_title="{{title}}" st_via="" displayText="Tweet"></span>
    <span class="st_linkedin_large" st_url="{{appUrl}}/book/{{identifier}}" st_image="{{readiumUrl}}/{{thumbHref}}" st_summary="{{description}}" st_title="{{title}}" displayText="LinkedIn"></span>
    <span class="st_googleplus_large" st_url="{{appUrl}}/book/{{identifier}}" st_image="{{readiumUrl}}/{{thumbHref}}" st_summary="{{description}}" st_title="{{title}}" displayText="Google+ Share"></span>
  </div>  
  {{> footer }}
  <script src="{{appUrl}}/js/book.js"></script>
</body>
</html>
