<!doctype html>
<html>
<head>
  <title>{{appName}}: {{title}}</title>
  <script id="list-template" type="text/x-handlebars-template">
    {{#items}}
      <div class="library-item">
        <div class="img_hold">
          <a class="item-link" href="<% appUrl %>/details/{{identifier}}"><img class="img-responsive" src="<% readiumUrl %>/{{thumbHref}}" alt="" title="{{title}}"/></a>
        </div>
        <div class="book-info">
          <h4 class="book-title"><a class="item-link" href="<% appUrl %>/details/{{identifier}}">{{title}}</a></h4>
          <div class="author">by {{author}}</div>
          <div class="description">{{description}}</div>
          <div class="caption buttons">
            <a class="btn btn-default" href="<% appUrl %>/book/{{identifier}}">Read</a>
            <a class="btn btn-default" href="<% appUrl %>/details/{{identifier}}">View Details</a>
          </div>
       </div>
      </div>
    {{/items}}
  </script>  
  {{> head }}
</head>
<body class="list-view search" data-app="{{appUrl}}" data-discovery="{{discovery}}">
  {{> header }}
  <div class="breadcrumb">
    <span class="page-title"><a href="{{appUrl}}">Home</a> &gt; Search &gt; <span class="query"></span></span>
  </div>
  <div class="content-wrapper">
    <div class="data-container">
      <h2 class="page-title">Search Results</h2>
      <p class="found"><span class="total-found">0</span> <span class="items-found">books</span> found</p>
      <div class="pure-g">
          <div id="a" class="pure-u-1 library-items"></div>
      </div>
    </div>
  </div>
  <ul class="pure-paginator"></ul>    
  <div class="pure-g container more-books">
    <div class="pure-u-1">
      <a href="#" class="pure-button loading">More books</a>
    </div>
  </div>
   {{> footer }}
  <script src="{{appUrl}}/js/search.js"></script>
</body>
</html>