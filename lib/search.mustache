{{=<% %>=}}
<!doctype html>
<html>
<head>
  <title>NYU Press Seach: <% title %></title>
<%> head %>
  <script id="list-template" type="text/x-handlebars-template">
      {{#items}}
      <div class="library-item">
        <div class="img_hold">
          <img class="img-responsive" src="<% readiumUrl %>/{{coverHref}}" alt="" title="{{title}}"/>
        </div>
        <div class="book-info">
          <h4><a class="item-link" href="../book/{{identifier}}">{{title}}</a></h4>
          <div class="author">by {{author}}</div>
          <div class="description">{{description}}</div>
          <div class="caption buttons">
            <a class="btn btn-default" href="<% appUrl %>/book/{{identifier}}">Read</a>
            <a class="btn btn-default" href="<% appUrl %>/details/{{identifier}}">View Details</a>
          </div>
       </div>
      </div>
    {{/items}}
  </script>  
</head>
<body class="home search" data-app="<% appUrl %>" data-discovery="<% discovery %>">
   <%> header %>


   <div class="breadcrumb">
      <span class="page-title"><a href="<% appUrl %>">Home</a> &gt; Search &gt; <span class="query"></span></span>
  </div>


  <div class="content-wrapper">
    <div class="data-container">
     
        <h2>View titles</h2>
        <p class="found">We've found <span class="total-found">0</span> books results</p>
        <div>
          <form class="pure-form" value="" method="get" action="<% appUrl %>/search" name="searchform" class="searchform">
          <input class="searchbox pure-input" name="searchbox"  type="text" placeholder="Search NYU OA books..." value="" size="30" maxlength="300">
          <button type="submit" class="pure-button">Search</button>
        </form>
      </div>
        <div class="pure-g">
          <div id="a" class="pure-u-1 library-items"></div>
        </div>
    </div>
  </div>

  <ul class="pure-paginator"></ul>    

  <div class="pure-g container more-books">
    <div class="pure-u-1">
      <a href="#" class="pure-button loading">More books</a>
    </div>
  </div>
 
   <%> footer %>

  <%={{ }}=%><script>{{{js}}}</script>
</body>
</html>