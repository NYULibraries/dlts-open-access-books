{{=<% %>=}}
<!doctype html>
<html>
<head>
  <title>NYU Press: <% title %></title>
  <%> head %>
  <script id="list-template" type="text/x-handlebars-template">
    {{#items}}
      <div class="pure-g">
        <div class="pure-u-1-3">
          <a href="<% appUrl %>/book/{{identifier}}"><img class="img-responsive" src="<% readiumUrl %>/{{coverHref}}" alt="" title="{{title}}"/></a>
        </div>
        <div class="pure-u-2-3 body">
          <div class="container">
            <h4 class="title">{{title}}</h4>
            <div>Author: {{author}}</div>
            <div>Publisher: {{publisher}}</div>          
            <div>Publication Date: {{date}}</div>
            <div>Subject: {{subject}}</div>      
            <div>ISBN: {{identifier}}</div>      
            <div>Permanent Link: <a href="{{handle}}">{{handle}}</a></div>            
            <div>Number of pages: {{format}}</div>
            <div><p>{{description}}</p></div>
            <div class="caption buttons">
              <a class="pure-button" href="http://nyupress.org/search.aspx?keyword={{identifier}}">Buy the book</a>
              <a class="pure-button" href="<% appUrl %>/book/{{identifier}}">Read</a>
            </div>
          </div>
        </div>
      </div>
    {{/items}}
  </script>    
</head>
<body class="details-page page">
<div>
  
  <div class="header"><%> header %></div>
    
  <div class="pure-g breadcrumb">
    <div class="pure-u-1">
      <span class="page-title"><a href="<% appUrl %>/">Home</a> &gt; Book details</span>
    </div>
  </div>
  
  <div class="content-wrapper">
    <div class="data-container"></div>
  </div>
  
